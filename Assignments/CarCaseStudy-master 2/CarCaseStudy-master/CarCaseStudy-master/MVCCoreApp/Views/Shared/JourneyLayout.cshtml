<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="cols-md-12">
                @Html.Partial("Header1")
            </div>
        </div>
        <div class="row">
            <aside class="cols-md-3" style="float:right">
                <figure>
                    <img style="border-radius:10px;" src="~/images/car.jpeg" height="120" width="200" class="img-thumbnail" />
                    <br />
                    <img style="border-radius:10px;" src="~/images/car.jpeg" height="120" width="200" class="img-thumbnail" />
                    <br />
                    <img style="border-radius:10px;" src="~/images/car.jpeg" height="120" width="200" class="img-thumbnail" />
                </figure>
            </aside>
            <div class="cols-md-9">
                @RenderBody()
            </div>
        </div>
        <div class="row">
            <div class="cols-md-12">
                @Html.Partial("Footer1")
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false) <!-- Render the Scripts section if defined -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>