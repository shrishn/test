@model IEnumerable<MVCCoreApp.Models.Driver>

@{
    ViewData["Title"] = "Driver List";

    Layout = "~/Views/Shared/JourneyLayout.cshtml";
}

<h1>Driver List</h1>
<a asp-action="AddDriver" class="btn btn-primary">Add New Driver</a>

@if (!Model.Any())

{
    <div class="alert alert-warning">No drivers available.</div>
}

else

{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Driver ID</th>
                <th>Driver Name</th>
                <th>Mobile No</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var driver in Model)

            {
                <tr>
                    <td>@driver.DriverId</td>
                    <td>@driver.DriverName</td>
                    <td>@driver.MobileNo</td>
                    <td>@driver.Age</td>
                    <td>
                        <a asp-action="EditDriver" asp-route-driverId="@driver.DriverId" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="DeleteDriver" method="post" style="display:inline">
                            <input type="hidden" name="driverId" value="@driver.DriverId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this driver?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
