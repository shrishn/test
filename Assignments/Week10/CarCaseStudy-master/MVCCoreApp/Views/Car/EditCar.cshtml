@model MVCCoreApp.Models.Car
@{
    ViewData["Title"] = "Edit Car";
    Layout = "~/Views/Shared/JourneyLayout.cshtml";
}

<h2>Edit Car Details</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="EditCar" method="post">
    <table class="table table-hover">
        <tr>
            <th>
                <label asp-for="CarId"></label>
            </th>
            <td>
                <input asp-for="CarId" class="form-control" readonly />  <!-- CarId is readonly -->
            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="CarModel"></label>
            </th>
            <td>
                <input asp-for="CarModel" class="form-control" />
            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="Color"></label>
            </th>
            <td>
                <input asp-for="Color" class="form-control" />
            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="TotalSeats"></label>
            </th>
            <td>
                <input asp-for="TotalSeats" type="number" class="form-control" />
            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="HasAC"></label>
            </th>
            <td>
                <input asp-for="HasAC" type="checkbox" />
            </td>
        </tr>
        <tr>
            <th></th>
            <td>
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </td>
        </tr>
    </table>
</form>
