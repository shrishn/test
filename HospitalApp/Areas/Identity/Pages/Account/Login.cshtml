@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f7f6;
    }

    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    h1, h2 {
        color: forestgreen;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-custom {
        background-color: forestgreen;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }

        .btn-custom:hover {
            background-color: dimgrey;
        }

    input:-webkit-autofill {
        box-shadow: 0 0 0px 1000px #E0E5B6 inset;
        -webkit-box-shadow: 0 0 0px 1000px #E0E5B6 inset;
    }
</style>

<div class="container">
    <form id="account" method="post">
        <h1 class="pb-2 text-center">@ViewData["Title"]</h1>
        <h2 class="pb-3 mb-4 text-center">Use a local account to log in</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="checkbox mb-3">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <div class="d-flex justify-content-center">
            <button id="login-submit" type="submit" class="btn-custom w-50">Log in</button>
        </div>
        <div class="text-center mt-3">
            <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}