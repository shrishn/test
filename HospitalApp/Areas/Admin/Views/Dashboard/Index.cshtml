    body {
        background: url('') no-repeat center center fixed;
        background-size: cover;
    }

    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-weight: bold;
    }

    .btn-lg {
        width: 100%;
    }
</style>