@model IEnumerable<HospitalApp.Models.Doctor>

@{
    ViewData["Title"] = "View Doctors";
}

<h1>View Doctors</h1>

<p>
    <a asp-action="AddDoctor" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExperienceInYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualifications)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.User?.Name <!-- Display the Name property of ApplicationUser -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExperienceInYears)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qualifications)
                </td>

                <td>
                    <a asp-action="EditDoctor" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteDoctor" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
