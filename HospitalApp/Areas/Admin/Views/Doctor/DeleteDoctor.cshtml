@model HospitalApp.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}

<h2>Are you sure you want to delete this doctor?</h2>

<div>
    <h4>Doctor Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.User.Name</dd>

        <dt class="col-sm-2">Specialization</dt>
        <dd class="col-sm-10">@Model.Specialty</dd>

        <dt class="col-sm-2">Qualifications</dt>
        <dd class="col-sm-10">@Model.Qualifications</dd>
    </dl>

    <form asp-action="DeleteDoctor" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ViewDoctors" class="btn btn-secondary">Cancel</a>
    </form>
</div>
